<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchViewListWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/line_shape_corner">
    </SearchView>

    <RelativeLayout
        android:layout_marginLeft="80dp"
        android:layout_width="210dp"
        android:layout_height="66dp">

        <Button
            android:id="@+id/wisataListWisataSearchBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Wisata"
            android:textColor="@color/black"
            android:textSize="20dp"
             />

        <Button
            android:id="@+id/eventListWisataSearchBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="Event"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_margin="5dp"
        android:background="@drawable/line_shape"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="186dp"
            android:layout_height="135dp"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgListWisata1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/list_wisata_picture" />

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@color/orange"
                android:gravity="center_horizontal"
                android:text="4.5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameListWisata1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wisata Taman Sari, Mengkhayalkan Para Putri"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/locationListWisataBtn1"
                    android:layout_width="186dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/orange"
                    android:text="Patehan, Jogja"
                    android:textColor="@color/white"
                    android:textSize="5pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/distanceListWisata1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/orange"
                android:gravity="center_horizontal"
                android:text="4,5 KM"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>